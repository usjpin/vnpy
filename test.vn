config width 100;
config height 200;
config mode "console";

display "red.png";
wait delay 5;
display "blue.png";
wait delay 2;
scene a {
    image show "red.png";
    audio start "cmon.wav";
    display "red.png";
    wait delay 5;
    display "blue.png";
    audio stop "cmon.wav";
    wait delay 2;
    exit;
}
wait delay 2;
scene b {
    display "red.png";
    option {
        case "pick me" do wait delay 5;
    }
    wait delay 3;
    jump a;
}
jump b;
